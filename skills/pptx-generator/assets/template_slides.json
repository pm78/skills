{
  "templates": [
    {
      "layout": "title",
      "title_style": {
        "font_size": 54,
        "font_weight": "bold",
        "color": "accent"
      },
      "subtitle_style": {
        "font_size": 28,
        "color": "text_secondary"
      }
    },
    {
      "layout": "bullets",
      "title_style": {
        "font_size": 40,
        "font_weight": "bold",
        "color": "accent"
      },
      "bullet_style": {
        "font_size": 18,
        "color": "text_primary"
      }
    },
    {
      "layout": "two-column",
      "title_style": {
        "font_size": 40,
        "font_weight": "bold",
        "color": "accent"
      },
      "column_style": {
        "font_size": 16,
        "color": "text_primary"
      }
    },
    {
      "layout": "image",
      "image_style": {
        "width_inches": 8,
        "x_inches": 1,
        "y_inches": 0.8
      }
    }
  ]
}
{
  "templates": {
    "title_slide": {
      "description": "Opening or closing slide with large centered title",
      "layout": "title",
      "fields": {
        "title": {
          "type": "string",
          "required": true,
          "description": "Main title text (recommended: 3-8 words)"
        },
        "subtitle": {
          "type": "string",
          "required": false,
          "description": "Secondary text below title"
        }
      },
      "example": {
        "layout": "title",
        "title": "Quarterly Business Review",
        "subtitle": "Q4 2025 Performance Summary"
      }
    },
    
    "bullets_slide": {
      "description": "Content slide with bullet point list",
      "layout": "bullets",
      "fields": {
        "title": {
          "type": "string",
          "required": true,
          "description": "Slide title"
        },
        "bullets": {
          "type": "array",
          "required": true,
          "description": "Array of bullet point strings (recommended: 3-6 items)"
        }
      },
      "example": {
        "layout": "bullets",
        "title": "Project Milestones",
        "bullets": [
          "Phase 1: Research and planning completed",
          "Phase 2: Development in progress (75%)",
          "Phase 3: Testing scheduled for next month",
          "Phase 4: Launch planned for Q2"
        ]
      }
    },
    
    "two_column_slide": {
      "description": "Comparison or side-by-side content",
      "layout": "two-column",
      "fields": {
        "title": {
          "type": "string",
          "required": true,
          "description": "Slide title"
        },
        "left": {
          "type": "string",
          "required": true,
          "description": "Left column content (use \\n for line breaks)"
        },
        "right": {
          "type": "string",
          "required": true,
          "description": "Right column content (use \\n for line breaks)"
        }
      },
      "example": {
        "layout": "two-column",
        "title": "Current State vs Future State",
        "left": "Current Process\n• Manual data entry\n• Paper-based workflow\n• 3-day turnaround\n• High error rate",
        "right": "Proposed Solution\n• Automated ingestion\n• Digital workflow\n• Same-day processing\n• 99.5% accuracy"
      }
    },
    
    "image_slide": {
      "description": "Full-width image with optional caption",
      "layout": "image",
      "fields": {
        "title": {
          "type": "string",
          "required": false,
          "description": "Optional slide title"
        },
        "image_path": {
          "type": "string",
          "required": true,
          "description": "Path to image file (PNG, JPG, GIF supported)"
        },
        "caption": {
          "type": "string",
          "required": false,
          "description": "Optional caption below image"
        }
      },
      "example": {
        "layout": "image",
        "title": "System Architecture",
        "image_path": "diagrams/architecture.png",
        "caption": "Figure 1: High-level system architecture diagram"
      }
    },
    
    "blank_slide": {
      "description": "Minimal slide with optional title only",
      "layout": "blank",
      "fields": {
        "title": {
          "type": "string",
          "required": false,
          "description": "Optional slide title"
        }
      },
      "example": {
        "layout": "blank",
        "title": "Discussion"
      }
    }
  },
  
  "presentation_templates": {
    "business_update": {
      "description": "Standard business update presentation",
      "suggested_structure": [
        {"layout": "title", "purpose": "Opening"},
        {"layout": "bullets", "purpose": "Agenda"},
        {"layout": "bullets", "purpose": "Key highlights"},
        {"layout": "two-column", "purpose": "Metrics comparison"},
        {"layout": "bullets", "purpose": "Next steps"},
        {"layout": "title", "purpose": "Closing/Q&A"}
      ]
    },
    
    "project_proposal": {
      "description": "Project proposal presentation",
      "suggested_structure": [
        {"layout": "title", "purpose": "Project name and tagline"},
        {"layout": "bullets", "purpose": "Problem statement"},
        {"layout": "bullets", "purpose": "Proposed solution"},
        {"layout": "two-column", "purpose": "Benefits vs costs"},
        {"layout": "bullets", "purpose": "Timeline/milestones"},
        {"layout": "bullets", "purpose": "Resource requirements"},
        {"layout": "title", "purpose": "Call to action"}
      ]
    },
    
    "training_deck": {
      "description": "Training or educational presentation",
      "suggested_structure": [
        {"layout": "title", "purpose": "Course title"},
        {"layout": "bullets", "purpose": "Learning objectives"},
        {"layout": "bullets", "purpose": "Topic 1 content"},
        {"layout": "image", "purpose": "Diagram or visual"},
        {"layout": "bullets", "purpose": "Topic 2 content"},
        {"layout": "two-column", "purpose": "Do's and Don'ts"},
        {"layout": "bullets", "purpose": "Key takeaways"},
        {"layout": "title", "purpose": "Questions"}
      ]
    }
  },
  
  "theme_definitions": {
    "dark": {
      "name": "Dark Theme",
      "colors": {
        "background": "#0F172A",
        "text_primary": "#F1F5F9",
        "text_secondary": "#CBD5E1",
        "accent": "#38BDF8"
      },
      "recommended_for": ["Tech presentations", "Modern look", "Screen viewing"]
    },
    "light": {
      "name": "Light Theme",
      "colors": {
        "background": "#FFFFFF",
        "text_primary": "#0F172A",
        "text_secondary": "#475569",
        "accent": "#0284C7"
      },
      "recommended_for": ["Printed handouts", "Formal settings", "Traditional look"]
    }
  }
}
